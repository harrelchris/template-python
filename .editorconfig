root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false

[*.py]
indent_size = 4
indent_style = space

[*.bat]
indent_style = tab

[*.html]
insert_final_newline = false

[*.{css,json}]
indent_size = 2

[Makefile]
indent_style = tab
